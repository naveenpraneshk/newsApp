
		<div class="article">

		{{#newsArticle}}
			
			{{title}} <br/>
			{{text}}

			<h3>Comments </h3>


			
				<form method="post" action="/news/{{news_id}}/addComment" name="add_comment"> 
				
				<input type="hidden" value = {{news_id}} name="id" />
				<br/>
				News Comment: <input type="text" name="comment" />
				<input type="submit" value = "submit">
				</form>
			


			{{/newsArticle}}

			{{#comments}}
			
				{{commentContent}}
				<hr/>
			{{/comments}}
			
			
		
			<br class="clear" />
			<hr />
		</div>
	</div>